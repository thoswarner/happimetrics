<%= simple_form_for @metric, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :title %>
  <%= f.input :metric_format, :input_html => {:class => "chosen"}, :label => "Format of metric value", :prompt => "Select a format" %>
  <%= f.association :metric_types, :input_html => {:class => "chosen", :"data-placeholder" => "Select availability"}, :label => "Availability", 
    :hint => "Where will the metric be available?" %>
  <%= f.input :description, :input_html => { :rows => 3 } %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                metrics_path, :class => 'btn' %>
  </div>
<% end %>
