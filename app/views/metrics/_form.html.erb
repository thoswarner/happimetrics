<%= simple_form_for @metric, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :metric_type %>
  <%= f.input :title %>
  <%= f.input :description %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                metrics_path, :class => 'btn' %>
  </div>
<% end %>
